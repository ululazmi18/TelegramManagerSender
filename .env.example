# Server Configuration (WAJIB)
PORT=3000
NODE_ENV=development

# Redis Configuration (WAJIB)
REDIS_HOST=localhost
REDIS_PORT=6379

# Python Service Configuration (WAJIB)
PYTHON_SERVICE_URL=http://localhost:8000

# JWT Configuration (WAJIB untuk security)
JWT_SECRET=your-secret-key-here

# Internal API Secret (WAJIB untuk komunikasi antar service)
INTERNAL_SECRET=your-internal-secret-here

# Database (OPSIONAL, ada default)
DB_PATH=./db/telegram_app.db

# Logging Configuration (OPSIONAL, ada default)
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_DIR=./logs
CENTRALIZED_LOG_FILE=application.log
MAX_LOG_FILE_SIZE=10MB
MAX_LOG_FILES=5

# Service-specific Log Levels (error, warn, info, debug) (OPSIONAL, inherit dari LOG_LEVEL) 
BACKEND_LOG_LEVEL=warn
PYTHON_LOG_LEVEL=warn
FRONTEND_LOG_LEVEL=warn